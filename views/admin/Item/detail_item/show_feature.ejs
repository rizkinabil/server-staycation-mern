<div
  class="tab-pane fade show active"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/Item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="modal-body">
              <div class="form-group">
                <label for="name">Name</label>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="Enter name..."
                  required
                />
              </div>

              <div class="form-group">
                <label for="name">Quantity (Qty)</label>
                <input
                  type="number"
                  class="form-control"
                  name="qty"
                  placeholder="Enter quantity..."
                  required
                />
              </div>

              <div class="form-group">
                <label for="name">Image</label>
                <input
                  type="file"
                  class="form-control"
                  name="image"
                  required
                />
              </div>
              <input
                type="hidden"
                value="<%= itemId %>"
                name="itemId"
              />
              <button type="submit" class="btn btn-primary">
                Save
              </button>
            </div>
          </form>
        </div>

        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableFeature"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < feature.length; i++){ %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= feature[i].name %></td>
                    <td><%= feature[i].qty %></td>
                    <td>
                      <img
                        src="http://localhost:3000/<%= feature[i].imageUrl %>"
                        alt="imageUrl"
                        style=" max-width: 70px; min-height: 70px; object-fit: contain;"
                      />
                    </td>
                    <td>
                      <form action="/admin/Item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE" method="POST">
                        <a
                          href="JavaScript:void();"
                          type="button"
                          class="btn btn-warning btn-circle btn-sm button-update"
                          data-id="<%= feature[i].id %>"
                          data-name="<%= feature[i].name %>"
                          data-qty="<%= feature[i].qty %>"
                          
        
                          ><i class="fas fa-edit"></i
                        ></a>
                        <button
                          type="submit"
                          class="btn btn-danger btn-circle btn-sm"
                          ><i class="fas fa-trash"></i
                        >
                      </form>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
